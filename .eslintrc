{
  "parser"  : "babel-eslint",
  "extends" : ["airbnb"],
  "rules": {
    "jsx-a11y/anchor-is-valid": [ "error", {
      "components": [ "Link" ],
      "specialLink": [ "to" ],
      "aspects": [ "noHref", "invalidHref", "preferButton" ]
    }],
    "comma-dangle": 0,
    "default-case": 0,
    "global-require": 0,
    "new-cap": [2, {"capIsNew": false, "newIsCap": true}],
    "no-console": 0,
    "no-floating-decimal": 0,
    "no-nested-ternary": 0,
    "react/jsx-filename-extension": 0,
    "import/no-extraneous-dependencies":
      ["error", {
          "devDependencies": [
            "**/gulpfile.babel.js",
            "**/src/plumbing/configureStore.js",
            "**/test/_helper.js",
            "**/*.spec.jsx",
            "**/*.spec.js",
            "**/*.story.js"
          ]
        }
      ]
  },
  "globals": {
    "after": false,
    "afterEach": false,
    "before": false,
    "beforeEach": false,
    "describe": false,
    "it": false,
    "require": false
  }
}
